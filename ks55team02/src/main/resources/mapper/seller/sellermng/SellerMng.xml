   	<select id="getStoreIdBySellerId" parameterType="string" resultType="string">
    /* [수정] users 테이블과 JOIN하여 로그인 아이디(user_no)로 조회합니다. */
    SELECT
        s.store_id
    FROM
        stores s
    JOIN
        users u ON s.seller_user_no = u.user_no
    WHERE
        u.user_no= #{sellerLgnId}
</select>
   	
	
     <select id="getStoreList" resultMap="storeResultMap">
      <!-- /* 스토어 목록 조회 */ -->
        SELECT
            store_id,
            aply_id,
            store_conm,
            store_intro_cn,
            store_logo_img,
            store_stts,
            info_mdfcn_dt,
            del_prcr_yn
        FROM
            stores
        ORDER BY
            store_id ASC
    </select>
    
    
     <select id="getStoreInfoById" resultMap="storeResultMap" parameterType="string">
        SELECT
            s.store_id,
            s.store_conm,
            s.store_intro_cn,
            /* ... s 테이블의 다른 필드들 ... */
            si.img_id,
            si.img_addr,
            si.img_file_nm,
            si.img_file_sz,
            si.img_type_cd
        FROM
            stores s
        LEFT JOIN
            store_images si ON s.store_logo_img = si.img_id AND si.del_yn = 0
        WHERE
            s.store_id = #{storeId}
    </select>
    
    
    <select id="getStoreSubscriptionByStoreId"
            resultType="map" parameterType="string">
            <!-- /* 아이디로 구독 기간 조회*/ -->
        SELECT
            s.store_id,                              -- 상점 ID
            MIN(sp.sbscr_bgng_dt) AS earliest_sbscr_bgng_dt, -- 가장 빠른 구독 시작일
            MAX(sp.sbscr_end_dt) AS latest_sbscr_end_dt,     -- 가장 늦은 구독 종료일
           	sbscr_prchs_nocs
        FROM
            subscription_payments AS sp
        JOIN
            users AS u ON sp.user_no = u.user_no
        JOIN
            store_application AS sa ON u.user_no = sa.aply_user_no
        JOIN
            stores AS s ON sa.aply_id = s.aply_id
        WHERE
            s.store_id = #{storeId}
        GROUP BY
            s.store_id;
    </select>
    
    
    <select id="getTotalSettleById" resultType="Long" parameterType="string">
    <!-- /* 상점별 판매 총액 */ -->
           SELECT
			    COALESCE(SUM(tot_sel_amt), 0) AS total_sales_for_store
			FROM
			    store_settlements
			WHERE
			    store_id = #{storeId};
   	</select>
   		 
   	<select id="getTotalOrderById" resultType="Long" parameterType="string">
    	<!-- /* 상점별 판매 상품 개수 */ -->
		  SELECT
			    SUM(oi.ordr_qntty) AS total_items_sold
			FROM
			    orders o JOIN order_items oi 
			    ON o.ordr_no = oi.ordr_no 
			where
			    oi.store_id = #{storeId}; 
  		</select>
  		
  		<select id="getActGdsById" resultType="Long" parameterType="string">
  		<!-- /* 상점별 활성화된 등록 상품 개수 */ -->
  		SELECT
		    COUNT(*) AS active_products_count
		FROM
		    products
		WHERE
		    store_id = #{storeId} 
		    AND actvtn_yn = TRUE;
  		</select>
  		
  		
  		 <select id="getTopSellingProductsByStoreId" resultMap="TopSellingProductResultMap">
  		 <!-- /* 상점별 제일 많이 팔린 상품 개수 */ -->
        SELECT
	        p.gds_no,           -- 상품 번호
	        p.store_id,         -- 상점 번호
	        p.ctgry_no,         -- 카테고리 번호
	        p.sel_user_no,      -- 판매자
	        p.mdfr_no,          -- 수정자
	        p.del_user_no,      -- 삭제자
	        p.gds_nm,           -- 상품명
	        p.gds_expln,        -- 상품 설명
	        p.bas_prc,          -- 기본 가격
	        p.dscnt_rt,         -- 할인율(%)
	        p.last_sel_prc,     -- 최종 판매가
	        p.reg_dt,           -- 등록일시
	        p.mdfcn_dt,         -- 수정일시
	        p.expsr_yn,         -- 노출 여부
	        p.actvtn_yn,        -- 활성화 여부
	        p.min_purchase_qty, -- 최소 구매 수량
	        p.max_purchase_qty, -- 최대 구매 수량
	        COALESCE(SUM(oi.ordr_qntty), 0) AS total_sold_quantity 
	    FROM
	        products p  
	    LEFT JOIN -- LEFT JOIN 
	        order_items oi ON p.gds_no = oi.gds_no
	    WHERE
	        p.store_id = #{storeId}
	        AND p.actvtn_yn = TRUE
	    GROUP BY
	        p.gds_no, p.store_id, p.ctgry_no, p.sel_user_no, p.mdfr_no, p.del_user_no, p.gds_nm, p.gds_expln, p.bas_prc, p.dscnt_rt, p.last_sel_prc, p.reg_dt, p.mdfcn_dt, p.inactvtn_dt, p.expsr_yn, p.actvtn_yn, p.min_purchase_qty, p.max_purchase_qty
	    ORDER BY
	        total_sold_quantity DESC
	    LIMIT 5
    </select>
    
	    <insert id="insertStoreImage" parameterType="ks55team02.common.domain.store.StoreImage">
        INSERT INTO store_images
            (img_id, img_addr, img_file_nm, img_file_sz, img_type_cd, reg_ymd, del_yn)
        VALUES
            (#{imgId}, #{imgAddr}, #{imgFileNm}, #{imgFileSz}, #{imgTypeCd}, NOW(), 0)
    </insert>

    <!-- [신규] stores 테이블의 로고 참조(FK) 업데이트 -->
    <update id="updateStoreLogoReference" parameterType="map">
        UPDATE stores
        SET
            store_logo_img = #{newLogoId},
            info_mdfcn_dt = NOW()
        WHERE
            store_id = #{storeId}
    </update>

    <!-- [신규] 기존 로고 이미지의 del_yn을 1로 업데이트 (논리적 삭제) -->
    <update id="markImageAsDeleted" parameterType="string">
        UPDATE store_images
        SET
            del_yn = 1
        WHERE
            img_id = #{imgId}
    </update>
    
    <!-- [수정] 상점 소개 업데이트 -->
    <update id="updateStoreIntro" parameterType="ks55team02.seller.common.domain.Store">
        UPDATE stores
        SET
            store_intro_cn = #{storeIntroCn},
            info_mdfcn_dt = NOW()
        WHERE
            store_id = #{storeId}
    </update>
  		
