<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ks55team02.seller.inquiry.mapper.SellerInquiryMapper">

    <resultMap id="storeResultMap" type="ks55team02.common.domain.store.Store">
        <id property="storeId"          column="store_id"/>
        <result property="aplyId"       column="aply_id"/>
        <result property="sellerUserNo" column="seller_user_no"/>
        <result property="storeConm"    column="store_conm"/>
        <result property="storeIntroCn" column="store_intro_cn"/>
        <result property="storeLogoImg" column="store_logo_img"/>
        <result property="storeStts"    column="store_stts"/>
        <result property="infoMdfcnDt"  column="info_mdfcn_dt"/>
        <result property="inactvtnDt"   column="inactvtn_dt"/>
        <result property="delPrcrYn"    column="del_prcr_yn"/>
    </resultMap>
    
    <!--  1. 목록 조회용 resultMap  -->
    <resultMap id="inquiryListResultMap" type="ks55team02.common.domain.inquiry.Inquiry">
        <id property="inqryId" column="inqry_id"/>
        <result property="inqryTypeCd" column="inqry_type_cd"/>
        <result property="inqryTtl" column="inqry_ttl"/>
        <result property="prvtYn" column="prvt_yn"/>
        <result property="prcsStts" column="prcs_stts"/>
        <result property="regYmd" column="reg_ymd"/>
        <association property="writerInfo" javaType="ks55team02.common.domain.inquiry.InquiryUser">
        <result property="userNcnm" column="user_ncnm"/>
    </association>
    </resultMap>

    <resultMap id="inquiryUserResultMap" type="ks55team02.common.domain.inquiry.InquiryUser">
        <id property="userNo"       column="user_no"/>
        <result property="userNcnm" column="user_ncnm"/>
        <result property="userLgnId" column="user_lgn_id"/>
    </resultMap>

    <resultMap id="inquiryImageResultMap" type="ks55team02.common.domain.inquiry.InquiryImage">
        <id property="inqryImgId"    column="inqry_img_id"/>
        <result property="imgId"       column="img_id"/> <result property="inqryId"     column="inquiry_image_inqry_id"/>
        <result property="ord"         column="ord"/>
        <result property="imgAddr"     column="img_addr"/>
    </resultMap>

    <resultMap id="answerResultMap" type="ks55team02.common.domain.inquiry.Answer">
        <id property="ansId"          column="ans_id"/>
        <result property="inqryId"      column="answer_inqry_id"/>
        <result property="answrUserNo"  column="answr_user_no"/>
        <result property="ansCn"        column="ans_cn"/>
        <result property="ansTm"        column="ans_tm"/>
        <result property="answrTypeCd"  column="answr_type_cd"/>
        <result property="rlsYn"        column="rls_yn"/>
        <result property="lastMdfcnDt"  column="last_mdfcn_dt"/>
        <result property="actvtnYn"     column="actvtn_yn"/>
        <result property="delDt"        column="del_dt"/>
        <result property="delUserNo"    column="del_user_no"/>
    </resultMap>

    <resultMap id="inquiryResultMap" type="ks55team02.common.domain.inquiry.Inquiry">
        <id property="inqryId"            column="inqry_id"/>
        <result property="inqryTypeCd"    column="inqry_type_cd"/>
        <result property="inqryTrgtTypeCd" column="inqry_trgt_type_cd"/>
        <result property="wrtrId"         column="wrtr_id"/>
        <result property="inqryStoreId"   column="inqry_store_id"/>
        <result property="inqryTtl"       column="inqry_ttl"/>
        <result property="inqryCn"        column="inqry_cn"/>
        <result property="prvtYn"         column="prvt_yn"/>
        <result property="prcsStts"       column="prcs_stts"/>
        <result property="prcsUserNo"     column="prcs_user_no"/>
        <result property="regYmd"         column="reg_ymd"/>
        <result property="mdfcnYmd"       column="mdfcn_ymd"/>
        <result property="delDt"          column="del_dt"/>
        <result property="delUserNo"      column="del_user_no"/>
        <result property="delActvtnYn"    column="del_actvtn_yn"/>

        <association property="writerInfo" resultMap="inquiryUserResultMap"/>
        <association property="storeInfo" resultMap="storeResultMap"/>
        <association property="answer" resultMap="answerResultMap"/>
        
        <collection property="inquiryImages" ofType="ks55team02.common.domain.inquiry.InquiryImage" resultMap="inquiryImageResultMap"/>
    </resultMap>
    
    <select id="getStoreIdByUserLgnId" parameterType="String" resultType="String">
        SELECT
            s.store_id
        FROM
            stores s
        JOIN
            users u ON s.seller_user_no = u.user_no
        WHERE
            u.user_lgn_id = #{userLgnId}
    </select>
    

    <select id="getSellerInquiryCnt" resultType="int">
    SELECT
        COUNT(i.inqry_id)
    FROM
        inquiries i
    LEFT JOIN
        users u ON u.user_no = i.wrtr_id
    WHERE
        i.inqry_store_id = #{inqryStoreId}
        AND i.prcs_stts NOT IN ('DELETED', 'HIDDEN')
    
        <!-- 모든 파라미터에서 "inquiry." 접두사를 제거합니다. -->
        <if test="searchValue != null and searchValue != ''">
            <choose>
                <when test="searchKey != null and searchKey != ''">
                    <choose>
                        <when test="searchKey == 'inqryTtl'">AND i.inqry_ttl LIKE CONCAT('%', #{searchValue}, '%')</when>
                        <when test="searchKey == 'inqryCn'">AND i.inqry_cn LIKE CONCAT('%', #{searchValue}, '%')</when>
                        <when test="searchKey == 'wrtrId'">AND u.user_ncnm LIKE CONCAT('%', #{searchValue}, '%')</when>
                        <when test="searchKey == 'inqryId'">AND i.inqry_id LIKE CONCAT('%', #{searchValue}, '%')</when>
                        <when test="searchKey == 'prcsStts'">AND i.prcs_stts LIKE CONCAT('%', #{searchValue}, '%')</when>
                    </choose>
                </when>
                <otherwise>
                    AND ( i.inqry_ttl LIKE CONCAT('%', #{searchValue}, '%') OR i.inqry_cn LIKE CONCAT('%', #{searchValue}, '%') OR u.user_ncnm LIKE CONCAT('%', #{searchValue}, '%') OR i.inqry_id LIKE CONCAT('%', #{searchValue}, '%') OR i.prcs_stts LIKE CONCAT('%', #{searchValue}, '%') )
                </otherwise>
            </choose>
        </if>
        <if test="filterConditions != null and filterConditions.size() > 0">
            AND i.prcs_stts IN
            <foreach collection="filterConditions" item="status" open="(" separator="," close=")">#{status}</foreach>
        </if>
        <if test="startDate != null">
            AND i.reg_ymd >= #{startDate}
        </if>
        <if test="endDate != null">
            AND #{endDate} > i.reg_ymd
        </if>
</select>

    <select id="getSellerInquiryList" resultMap="inquiryListResultMap">
    SELECT
        i.inqry_id,
        i.inqry_type_cd,
        i.inqry_ttl,
        i.prvt_yn,
        i.prcs_stts,
        i.reg_ymd,
        u.user_ncnm,
        (SELECT COUNT(*) FROM answer a WHERE a.inqry_id = i.inqry_id) AS answer_count
    FROM
        inquiries i
    LEFT JOIN
        users u ON u.user_no = i.wrtr_id
    WHERE
        i.inqry_store_id = #{inquiry.inqryStoreId}
        AND i.prcs_stts NOT IN ('DELETED', 'HIDDEN')
        
        <!-- 전체 검색 조건 (param1 -> inquiry) -->
        <if test="inquiry.searchValue != null and inquiry.searchValue != ''">
            <choose>
                <when test="inquiry.searchKey != null and inquiry.searchKey != ''">
                    <choose>
                        <when test="inquiry.searchKey == 'inqryTtl'">AND i.inqry_ttl LIKE CONCAT('%', #{inquiry.searchValue}, '%')</when>
                        <when test="inquiry.searchKey == 'inqryCn'">AND i.inqry_cn LIKE CONCAT('%', #{inquiry.searchValue}, '%')</when>
                        <when test="inquiry.searchKey == 'wrtrId'">AND u.user_ncnm LIKE CONCAT('%', #{inquiry.searchValue}, '%')</when>
                        <when test="inquiry.searchKey == 'inqryId'">AND i.inqry_id LIKE CONCAT('%', #{inquiry.searchValue}, '%')</when>
                        <when test="inquiry.searchKey == 'prcsStts'">AND i.prcs_stts LIKE CONCAT('%', #{inquiry.searchValue}, '%')</when>
                    </choose>
                </when>
                <otherwise>
                    AND (i.inqry_ttl LIKE CONCAT('%', #{inquiry.searchValue}, '%') OR i.inqry_cn LIKE CONCAT('%', #{inquiry.searchValue}, '%') OR u.user_ncnm LIKE CONCAT('%', #{inquiry.searchValue}, '%') OR i.inqry_id LIKE CONCAT('%', #{inquiry.searchValue}, '%') OR i.prcs_stts LIKE CONCAT('%', #{inquiry.searchValue}, '%'))
                </otherwise>
            </choose>
        </if>

        <!-- 처리 상태 필터 조건 (param1 -> inquiry) -->
        <if test="inquiry.filterConditions != null and inquiry.filterConditions.size() > 0">
            AND i.prcs_stts IN
            <foreach collection="inquiry.filterConditions" item="status" open="(" separator="," close=")">#{status}</foreach>
        </if>
        
        <!-- 기간 필터 조건 (날짜 문제 최종 해결) -->
        <if test="inquiry.startDate != null">
            AND i.reg_ymd >= #{inquiry.startDate}
        </if>
        <if test="inquiry.endDate != null">
            AND #{inquiry.endDate} > i.reg_ymd
        </if>
    
    <!-- 정렬 조건 (param1 -> inquiry) -->
    ORDER BY
        <choose>
            <when test="inquiry.sortKey == 'inqryId'">i.inqry_id</when>
            <when test="inquiry.sortKey == 'regYmd'">i.reg_ymd</when>
            <otherwise>i.reg_ymd</otherwise>
        </choose>
        <if test="inquiry.sortOrder != null and inquiry.sortOrder != ''">${inquiry.sortOrder}</if>
        <if test="inquiry.sortOrder == null or inquiry.sortOrder == ''">DESC</if>
        
    <!-- 페이징 처리 (param2, param3 -> limitStart, pageSize) -->
    LIMIT #{limitStart}, #{pageSize}
</select>

    <select id="getSellerInquiryByStoreId" parameterType="String" resultMap="inquiryResultMap">
        SELECT
            i.inqry_id,
            i.inqry_type_cd,
            i.inqry_trgt_type_cd,
            i.wrtr_id,
            i.inqry_store_id,
            i.inqry_ttl,
            i.inqry_cn,
            i.prvt_yn,
            i.prcs_stts,
            i.prcs_user_no,
            i.reg_ymd,
            i.mdfcn_ymd,
            i.del_dt,
            i.del_user_no,
            i.del_actvtn_yn,
            s.store_id,
            s.aply_id,
            s.seller_user_no,
            s.store_conm,
            s.store_intro_cn,
            s.store_logo_img,
            s.store_stts,
            s.info_mdfcn_dt,
            s.inactvtn_dt,
            s.del_prcr_yn,
            u.user_no,
            u.user_ncnm,
            u.user_lgn_id,
            iim.inqry_img_id,
            iim.img_id,
            iim.inqry_id AS inquiry_image_inqry_id,
            iim.ord,
            stim.img_addr, a.ans_id,
            a.inqry_id AS answer_inqry_id,
            a.answr_user_no,
            a.ans_cn,
            a.ans_tm,
            a.answr_type_cd,
            a.rls_yn,
            a.last_mdfcn_dt,
            a.actvtn_yn,
            a.del_dt,
            a.del_user_no
        FROM
            inquiries i
        JOIN
            stores s ON s.store_id = i.inqry_store_id
        LEFT JOIN
            users u ON u.user_no = i.wrtr_id
        LEFT JOIN inquiry_images iim ON iim.inqry_id = i.inqry_id
        LEFT JOIN store_images stim ON stim.img_id = iim.img_id LEFT JOIN
            answer a ON a.inqry_id = i.inqry_id
        WHERE i.inqry_id = #{inqryId}
    </select>

    <select id="getSellerUserNoByStoreId" parameterType="String" resultType="String">
        SELECT
            seller_user_no
        FROM
            stores
        WHERE
            store_id = #{storeId}
    </select>
    
    <update id="updateInquiryProcessStatus" parameterType="map">
        UPDATE inquiries
        SET
            prcs_stts = #{prcsStts},
            mdfcn_ymd = NOW()
        WHERE
            inqry_id = #{inqryId}
    </update>

    <insert id="insertInquiryAnswerHistory" parameterType="ks55team02.common.domain.inquiry.InquiryAnswerHistory">
        INSERT INTO inquiry_answer_history
        (
            ans_hstry_id,
            answer_id,
            inqry_id,
            prcs_user_no,
            chg_bfr_stts,
            chg_aftr_stts,
            chg_cn,
            chg_dt
        )
        VALUES
        (
            #{ansHstryId},
            #{answerId},
            #{inqryId},
            #{prcsUserNo},
            #{chgBfrStts},
            #{chgAftrStts},
            #{chgCn},
            NOW()
        )
    </insert>

    <select id="getMaxAnsHstryIdNumber" resultType="java.lang.Integer">
        SELECT
            MAX(CAST(SUBSTRING_INDEX(ans_hstry_id, '_', -1) AS UNSIGNED))
        FROM
            inquiry_answer_history
        WHERE
            ans_hstry_id LIKE 'ans_hstry_%'
    </select>

    <select id="getInquiryProcessStatus" parameterType="String" resultType="String">
        SELECT
            prcs_stts
        FROM
            inquiries
        WHERE
            inqry_id = #{inqryId}
    </select>

</mapper>